<!DOCTYPE html>
<html>

<head>
</head>

<body>
    <div class="registration-form">
        <h3>Registration Form</h3>
        <p>
            <%=(typeof alertMsg!='undefined' )? alertMsg:''%>
        </p>
        <form method="post" action="register">
            <div class="form-container">
                <div><input type="text" placeholder="Full Name" name="fullName" required></div>
            </div>
            <div class="form-container">
                <div><input type="password" placeholder="Password" name="password"></div>
                <div><input type="password" placeholder="Confirm Password" name="confirm_password"></div>
            </div>
            <div class="form-container">
                <div><input type="email" placeholder="Email Address" name="email" required></div>
                <div><input type="number" placeholder="Mobile Number" name="mobileNumber" required></div>
            </div>
            <div class="form-container">
                <div><input type="text" placeholder="Class" name="class" required></div>
                <div><input type="text" placeholder="School" name="school" required></div>
            </div>
            <div class="form-container">
                <div><input type="text" placeholder="Message" name="message" required></div>
            </div>
            <button type="submit">Register Now</button>
            <a href="/login">Login</a>
        </form>
    </div>
</body>

</html>